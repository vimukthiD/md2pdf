{
  "name": "@vimukthid/md2pdf",
  "version": "2.0.2",
  "description": "A configurable command-line utility that converts Markdown files to professionally formatted PDFs with customizable styling, headers, footers, and themes",
  "main": "src/index.js",
  "bin": {
    "md2pdf": "./bin/md2pdf.js"
  },
  "scripts": {
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/ bin/ --ext .js",
    "lint:fix": "eslint src/ bin/ --ext .js --fix",
    "format": "prettier --write \"src/**/*.js\" \"bin/**/*.js\"",
    "prepublishOnly": "npm test && npm run lint"
  },
  "keywords": [
    "markdown",
    "pdf",
    "converter",
    "md2pdf",
    "markdown-to-pdf",
    "document",
    "cli",
    "puppeteer",
    "html-to-pdf",
    "documentation"
  ],
  "author": "Vimukthi Dissanayake <dissanayake.kasun@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vimukthiD/md2pdf.git"
  },
  "bugs": {
    "url": "https://github.com/vimukthiD/md2pdf/issues"
  },
  "homepage": "https://github.com/vimukthiD/md2pdf#readme",
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "bin/",
    "src/",
    "themes/",
    "LICENSE",
    "README.md"
  ],
  "dependencies": {
    "ajv": "^8.17.1",
    "chalk": "^4.1.2",
    "commander": "^14.0.2",
    "highlight.js": "^11.11.1",
    "markdown-it": "^14.1.0",
    "ora": "^5.4.1",
    "puppeteer": "^24.35.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "eslint": "^9.39.2",
    "jest": "^30.2.0",
    "prettier": "^3.5.2"
  }
}
